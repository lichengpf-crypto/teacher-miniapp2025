.page { padding-bottom: 24rpx; }
.banner { margin: 16rpx; padding: 16rpx; border-radius: 12rpx; background: #fff7e6; color: #5a3a00; }
.section { margin: 16rpx; padding: 16rpx; border-radius: 12rpx; background: #ffffff; box-shadow: 0 2rpx 8rpx rgba(0,0,0,.06); }
.section-title { font-weight: 700; margin-bottom: 12rpx; font-size: 30rpx; }
.subtitle { margin-top: 12rpx; margin-bottom: 8rpx; color:#333; font-weight:600; }
.subsection { margin-top: 12rpx; padding-top: 8rpx; border-top: 1px solid #eee; }

.row { display: flex; align-items: center; padding: 8rpx 0; flex-wrap: wrap; }
.head { font-weight: 700; border-bottom: 1px solid #eee; padding-bottom: 12rpx; }
.col { padding-right: 12rpx; min-height: 48rpx; display:flex; align-items:center; }
.col-idx { width: 60rpx; color:#666; }
.col-word { flex: 1; }
.col-status { width: 160rpx; }
.col-sug { flex: 2; }
.col-act { width: 160rpx; justify-content: flex-end; }

.ok { color: #0a7a0a; }
.err { color: #c40000; }
.hint { color: #333; }        /* 确保“看得见”，不用太浅的灰 */
.mono { font-family: Menlo, Consolas, monospace; }
.badge { background:#eef; color:#335; padding: 4rpx 8rpx; border-radius: 8rpx; margin-left: 8rpx; }

.ops { display:flex; gap: 12rpx; margin-top: 12rpx; }
.btn { margin: 16rpx; }
.actions { margin: 24rpx 16rpx 8rpx; }

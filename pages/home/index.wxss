.page {
  padding: 24rpx;
  box-sizing: border-box;
}

.section { margin-bottom: 24rpx; }
.section-title { font-size: 30rpx; font-weight: 600; margin-bottom: 12rpx; }

.field { margin-bottom: 18rpx; }
.label { font-size: 26rpx; color: #555; margin-bottom: 8rpx; }

.input {
  border: 1rpx solid #ddd; border-radius: 12rpx;
  padding: 16rpx 18rpx; font-size: 28rpx; background: #fff;
}

.textarea {
  border: 1rpx solid #ddd; border-radius: 12rpx;
  padding: 16rpx 18rpx; font-size: 28rpx; background: #fff;
  min-height: 160rpx;
}

.actions {
  display: flex; gap: 16rpx; margin: 18rpx 0 6rpx 0; flex-wrap: wrap;
}
.btn { border-radius: 16rpx; }
.primary { background: #07c160; color: #fff; }

.students-wrap {
  display: flex; flex-wrap: wrap; gap: 10rpx 12rpx; margin-top: 12rpx;
}

.student-chip {
  display: inline-flex; align-items: center;
  padding: 10rpx 16rpx;
  border: 1rpx solid #ddd; border-radius: 18rpx;
  font-size: 26rpx; color: #333; background: #fff;
}
.student-chip .mark { margin-right: 8rpx; font-weight: 700; }
.student-chip.selected {
  border-color: #0aa; background: #e6fbfb; color: #066;
}

.student-actions { margin-top: 12rpx; display: flex; gap: 12rpx; }
.selected-list { margin-top: 8rpx; color: #666; font-size: 24rpx; }

.tip { margin-top: 16rpx; color: #999; font-size: 24rpx; }
